# Database Configuration (Read-only credentials)
DATABASE_URL=postgresql://readonly_user:password@localhost:5432/analytics_db

# LLM API Keys (choose one)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# Safety & Security Settings
QUERY_TIMEOUT_SECONDS=30
DEFAULT_ROW_LIMIT=100
MAX_ROW_LIMIT=1000
RATE_LIMIT_PER_MINUTE=10

# Application Settings
APP_NAME=Sales & Website Analytics Chat Assistant
APP_VERSION=1.0.0
DEBUG=False

# CORS Settings (frontend URL)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_PATH=logs/audit.log
ENABLE_QUERY_LOGGING=True

# Whitelisted Tables (comma-separated)
WHITELISTED_TABLES=["sales_transactions", "website_visits"]

# Blocked SQL Keywords (comma-separated)
BLOCKED_KEYWORDS=["DROP", "DELETE", "UPDATE", "INSERT", "TRUNCATE", "ALTER", "CREATE", "GRANT", "REVOKE"]
